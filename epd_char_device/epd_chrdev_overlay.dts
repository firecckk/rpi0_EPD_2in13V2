/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&spi0>;
        __overlay__ {
            status = "okay";
            
            spidev@0 {
                status = "disabled";
            };

            epd@0 {
                compatible = "waveshare,epd2in13v2";
                reg = <0>;
                spi-max-frequency = <10000000>;

                dc-gpios = <&gpio 25 GPIO_ACTIVE_HIGH>;     
                reset-gpios = <&gpio 17 GPIO_ACTIVE_HIGH>;  
                busy-gpios = <&gpio 24 GPIO_ACTIVE_HIGH>;   
                pwr-gpios = <&gpio 18 GPIO_ACTIVE_HIGH>;    
                cs-gpios = <&gpio 8 GPIO_ACTIVE_HIGH>;
            };
        };
    };
};
